<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Returned Books</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="profile">
            <img src="/images/user.png" alt="User" class="user-icon">
            <div class="user-info">
                <h3>Tsaqif Hiyam</h3>
                <p>User</p>
            </div>
        </div>
        <div class="menu">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">My Books</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <h1>Los Librario Pinguinos Projecca</h1>
        </div>
        <div class="tabs">
            <button>Borrowed Books</button>
            <button class="active">Returned Books</button>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User ID</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                        <th>Date & Time</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.id %></td>
                        <td><%= book.userId %></td>
                        <td><%= book.amount %></td>
                        <td><%= book.dueDate %></td>
                        <td><%= book.date %></td>
                        <td><button class="delete-button">Delete</button></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>