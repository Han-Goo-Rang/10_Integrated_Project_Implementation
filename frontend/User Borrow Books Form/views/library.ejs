<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Lane Books</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="profile">
            <img src="/images/user.png" alt="User" class="user-icon">
            <div class="user-info">
                <h3>Tsaqif Hiyam</h3>
                <p>User</p>
            </div>
        </div>
        <div class="menu">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">My Books</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <h1>Library Lane Books</h1>
            <div class="actions">
                <button>Acquire</button>
                <input type="text" placeholder="Search by ID or Type">
            </div>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Language</th>
                        <th>Availability</th>
                        <th>Add to Cart</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.id %></td>
                        <td><%= book.name %></td>
                        <td><%= book.type %></td>
                        <td><%= book.language %></td>
                        <td><%= book.availability %></td>
                        <td><button class="acquire-button" data-id="<%= book.id %>">Acquire</button></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>