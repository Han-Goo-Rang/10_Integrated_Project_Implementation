<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="profile">
            <img src="/images/penguin.png" alt="Penguin" class="user-icon">
            <div class="user-info">
                <h3>Nisal Gunasekara</h3>
                <p>Admin</p>
            </div>
        </div>
        <div class="menu">
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Catalog</a></li>
                <li><a href="#">Books</a></li>
                <li><a href="#">Users</a></li>
                <li><a href="#">Branches</a></li>
                <li><a href="#">Log Out</a></li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <h1>Los Librario Pinguinos Projecca</h1>
            <div class="user-info">
                <p>Last Login: Sep 02, 2023</p>
                <p>Time: 12:29 PM</p>
            </div>
        </div>
        <div class="stats">
            <div class="stat-item">
                <h2><%= totalUserBase %></h2>
                <p>Total User Base</p>
            </div>
            <div class="stat-item">
                <h2><%= totalBookCount %></h2>
                <p>Total Book Count</p>
            </div>
            <div class="stat-item">
                <h2><%= branchCount %></h2>
                <p>Branch Count</p>
            </div>
        </div>
        <div class="chart">
            <canvas id="borrowedReturnedChart"></canvas>
        </div>
        <div class="overdue-borrowers">
            <h2>Overdue Borrowers</h2>
            <ul>
                <% overdueBorrowers.forEach(borrower => { %>
                <li><%= borrower.name %> Borrowed ID: <%= borrower.borrowedId %></li>
                <% }) %>
            </ul>
        </div>
        <div class="admins">
            <h2>BookWorm Admins</h2>
            <ul>
                <% admins.forEach(admin => { %>
                <li>
                    <div class="admin-info">
                        <h3><%= admin.name %></h3>
                        <p>Admin ID: <%= admin.adminId %></p>
                        <span class="status <%= admin.status %>"><%= admin.status.charAt(0).toUpperCase() + admin.status.slice(1) %></span>
                    </div>
                    <button class="edit-button">Edit</button>
                </li>
                <% }) %>
            </ul>
        </div>
        <div class="branch-network">
            <h2>Branch Network</h2>
            <ul>
                <% branches.forEach(branch => { %>
                <li>
                    <div class="branch-info">
                        <h3><%= branch.name %></h3>
                        <p>Branch ID: <%= branch.branchId %></p>
                    </div>
                    <button class="edit-button">Edit</button>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>